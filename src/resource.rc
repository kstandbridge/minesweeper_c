   CONTROL "Easy", IDC_SETTINGS_EASY, BUTTON, BS_RADIOBUTTON | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 10, 14, 40, 14 
   CONTROL "Normal", IDC_SETTINGS_NORMAL, BUTTON, BS_RADIOBUTTON | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 10, 28, 40, 14 

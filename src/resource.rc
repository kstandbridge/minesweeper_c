   CONTROL "Custom", IDC_SETTINGS_CUSTOM, BUTTON, BS_RADIOBUTTON | WS_CHILD | WS_VISIBLE | WS_TABSTOP, 10, 56, 40, 14 
   CONTROL "Bomb Count:", IDC_STATIC, STATIC, SS_LEFT | WS_CHILD | WS_VISIBLE | WS_GROUP, 64, 5, 48, 7 

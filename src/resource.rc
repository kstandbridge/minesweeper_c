IDR_MENU MENU
BEGIN
	POPUP "&Game"
	BEGIN
		MENUITEM "&New Game", IDD_GAME_NEW
		MENUITEM "&Settings", IDD_GAME_SETTINGS
		MENUITEM SEPARATOR
		MENUITEM "E&xit", IDD_GAME_EXIT
	END

	POPUP "&Debug"
	BEGIN
		MENUITEM "Show &Bombs", IDD_DEBUG_SHOW_BOMBS
	END
END

IDD_SETTINGS DIALOGEX 0, 0, 192, 80
STYLE DS_SETFONT | DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
